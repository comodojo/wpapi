{
    "name": "comodojo/wpapi",
    "description": "Wordpress XML-RPC API wrapper",
    "license": "MIT",
    "keywords": [
        "wordpress",
        "api",
        "xmlrpc",
        "wrapper"
    ],
    "homepage": "http://comodojo.org",
    "authors": [
        {
            "name": "Marco Castiello",
            "email": "marco.castiello@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/comodojo/wpapi/issues"
    },
    "autoload": {
        "psr-4": {
            "Comodojo\\Exception\\": "src/Exception",
            "Comodojo\\WPAPI\\": [
            	"src",
            	"src/Object",
            	"src/Blog",
            	"src/Post",
            	"src/Media",
            	"src/User",
            	"src/Taxonomy",
            	"src/Term",
            	"src/Iterator"
        	]
        }
    },    
    "require": {
        "php": ">=5.3.0",
        "comodojo/rpcclient": "1.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "wp-cli/wp-cli": "~0.19",
        "scrutinizer/ocular": "~1.1"
    }
}